{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"version": "1.6",
	"body": [
		{
			"type": "Container",
			"items": [
				{
					"type": "TextBlock",
					"text": "Photo Album",
					"size": "ExtraLarge",
					"style": "heading",
					"horizontalAlignment": "Center"
				},
				{
					"type": "TextBlock",
					"text": "Landscapes",
					"size": "Large",
					"horizontalAlignment": "Center"
				},
				{
					"type": "Carousel",
					"spacing": "Large",
					"pages": [
						{
							"type": "CarouselPage",
							"id": "firstPage",
                            "showBorder": true,
                            "roundedCorners": true,
                            "layouts": [
                                {
                                    "type": "Layout.AreaGrid",
                                    "columns": [
                                        35,
                                        "auto"
                                    ],
                                    "areas": [
                                        {
                                            "name": "image"
                                        },
                                        {
                                            "name": "text",
                                            "column": 2
                                        },
                                        {
                                            "name": "text1",
                                            "column": 1,
                                            "row": 2
                                        },
                                        {
                                            "name": "image1",
                                            "column": 2,
                                            "row": 2
                                        }
                                    ]
                                }
                            ],
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "https://www.wallpaperbetter.com/wallpaper/905/859/738/beautiful-nature-landscape-mountains-trees-lake-sky-clouds-water-reflection-1080P-wallpaper.jpg",
                                    "grid.area": "image"
                                },
                                {
                                    "type": "Container",
                                    "grid.area": "text",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "This is a beautiful landscape",
                                            "wrap": true,
                                            "size": "ExtraLarge",
                                            "weight": "Bolder"
                                        },
                                        {
                                            "type": "TextBlock",
                                            "text": "You can see mountains, a lake, trees in the foreground. The sun is shining, there's some mist in the background.",
                                            "wrap": true
                                        }
                                    ]
                                },
                                {
                                    "type": "Container",
                                    "grid.area": "text1",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "This is a beautiful landscape",
                                            "wrap": true,
                                            "size": "ExtraLarge",
                                            "weight": "Bolder"
                                        },
                                        {
                                            "type": "TextBlock",
                                            "text": "You can see mountains, a lake, trees in the foreground. The sun is shining, there's some mist in the background.",
                                            "wrap": true
                                        }
                                    ]
                                },
                                {
                                    "type": "Image",
                                    "url": "https://www.wallpaperbetter.com/wallpaper/905/859/738/beautiful-nature-landscape-mountains-trees-lake-sky-clouds-water-reflection-1080P-wallpaper.jpg",
                                    "grid.area": "image1"
                                }
                            ],
							"rtl": false
						},
						{
							"type": "CarouselPage",
							"id": "secondPage",
							"items": [
								{
									"type": "Image",
									"url": "https://picsum.photos/id/110/300/300",
									"altText": "sunset",
                                    "horizontalAlignment": "Center"
								}
							],
							"rtl": false
						},
						{
							"type": "CarouselPage",
							"id": "thirdPage",
							"items": [
								{
									"type": "Image",
									"url": "https://picsum.photos/id/120/300/300",
									"altText": "starlit night sky",
                                    "horizontalAlignment": "Center"
								}
							],
							"rtl": false
						}
					],
					"rtl": false
				}
			],
			"style": "emphasis"
		}
	]
}
