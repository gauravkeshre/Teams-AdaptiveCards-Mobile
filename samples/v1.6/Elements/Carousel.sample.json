{
    "type": "AdaptiveCard",
    "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "text": "Below is a Carousel with 6 pages",
            "wrap": true,
            "size": "Large"
        },
        {
            "type": "Carousel",
            "pageAnimation": "Slide",
            "pages": [
                {
                    "type": "CarouselPage",
                    "style": "emphasis",
                    "showBorder": true,
                    "roundedCorners": true,
                    "verticalContentAlignment":"Bottom",
                    "layouts": [
                        {
                            "type": "Layout.AreaGrid",
                            "columns": [
                                35,
                                "auto"
                            ],
                            "areas": [
                                {
                                    "name": "image"
                                },
                                {
                                    "name": "text",
                                    "column": 2
                                },
                                {
                                    "name": "text1",
                                    "column": 1,
                                    "row": 2
                                },
                                {
                                    "name": "image1",
                                    "column": 2,
                                    "row": 2
                                }
                            ]
                        }
                    ],
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://www.wallpaperbetter.com/wallpaper/905/859/738/beautiful-nature-landscape-mountains-trees-lake-sky-clouds-water-reflection-1080P-wallpaper.jpg",
                            "grid.area": "image"
                        },
                        {
                            "type": "Container",
                            "grid.area": "text",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "This is a beautiful landscape",
                                    "wrap": true,
                                    "size": "ExtraLarge",
                                    "weight": "Bolder"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "You can see mountains, a lake, trees in the foreground. The sun is shining, there's some mist in the background.",
                                    "wrap": true
                                }
                            ]
                        },
                        {
                            "type": "Container",
                            "grid.area": "text1",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "This is a beautiful landscape",
                                    "wrap": true,
                                    "size": "ExtraLarge",
                                    "weight": "Bolder"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "You can see mountains, a lake, trees in the foreground. The sun is shining, there's some mist in the background.",
                                    "wrap": true
                                }
                            ]
                        },
                        {
                            "type": "Image",
                            "url": "https://www.wallpaperbetter.com/wallpaper/905/859/738/beautiful-nature-landscape-mountains-trees-lake-sky-clouds-water-reflection-1080P-wallpaper.jpg",
                            "grid.area": "image1"
                        }
                    ]
                },
                {
                    "type": "CarouselPage",
                    "style": "accent",
                    "showBorder": true,
                    "roundedCorners": true,
                    "verticalContentAlignment":"Bottom",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "PAGE 2 of 6",
                            "wrap": true,
                            "size": "Large"
                        },
                        {
                            "type": "TextBlock",
                            "text": "First TextBlock",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "text": "Second TextBlock with separator",
                            "wrap": true,
                            "separator": true,
                            "spacing": "Medium"
                        }
                    ]
                },
                {
                    "type": "CarouselPage",
                    "style": "good",
                    "showBorder": true,
                    "roundedCorners": true,
                    "verticalContentAlignment":"Bottom",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "PAGE 3 of 6",
                            "wrap": true,
                            "size": "Large"
                        },
                        {
                            "type": "TextBlock",
                            "text": "First TextBlock",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "text": "Second TextBlock with separator",
                            "wrap": true,
                            "separator": true,
                            "spacing": "Medium"
                        }
                    ]
                },
                {
                    "type": "CarouselPage",
                    "style": "warning",
                    "showBorder": true,
                    "roundedCorners": true,
                    "verticalContentAlignment":"Bottom",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "PAGE 4 of 6",
                            "wrap": true,
                            "size": "Large"
                        },
                        {
                            "type": "TextBlock",
                            "text": "First TextBlock",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "text": "Second TextBlock with separator",
                            "wrap": true,
                            "separator": true,
                            "spacing": "Medium"
                        },
                        {
                            "type": "TextBlock",
                            "size": "Large",
                            "text": "Rating input"
                        },
                        {
                            "type": "Input.Rating",
                            "id": "rating1",
                            "label": "Pick a rating",
                            "size": "medium",
                            "isRequired": true,
                            "errorMessage": "Please pick a rating"
                        },
                        {
                            "type": "Input.Rating",
                            "id": "rating2",
                            "label": "Pick a rating",
                            "allowHalfSteps": true,
                            "size": "large",
                            "isRequired": true,
                            "errorMessage": "Please pick a rating",
                            "color": "marigold",
                            "value": 3
                        }
                    ]
                },
                {
                    "type": "CarouselPage",
                    "style": "attention",
                    "showBorder": true,
                    "roundedCorners": true,
                    "verticalContentAlignment":"Bottom",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "PAGE 5 of 6",
                            "wrap": true,
                            "size": "Large"
                        },
                        {
                            "type": "TextBlock",
                            "text": "First TextBlock",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "text": "Second TextBlock with separator",
                            "wrap": true,
                            "separator": true,
                            "spacing": "Medium"
                        }
                    ]
                },
                {
                    "type": "CarouselPage",
                    "showBorder": true,
                    "roundedCorners": true,
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "PAGE 6 of 6",
                            "wrap": true,
                            "size": "Large"
                        },
                        {
                            "type": "TextBlock",
                            "text": "First TextBlock",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "text": "Second TextBlock with separator",
                            "wrap": true,
                            "separator": true,
                            "spacing": "Medium"
                        }
                    ]
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "This text is below the Carousel",
            "wrap": true,
            "size": "Large"
        }
    ],
    "actions": [
        {
            "type": "Action.OpenUrl",
            "title": "Click me",
            "url": "https://www.microsoft.com"
        }
    ]
}
